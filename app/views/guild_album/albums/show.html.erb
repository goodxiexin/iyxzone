<% content_for :left do %>
  <%= render :partial => '/app_menu' %>
<% end %>

<div class='crumb'>
  工会<%= guild_link @guild %> -> 工会相册
</div>

<% if @membership and [3,4,5].include? @membership.status %>
  <%= link_to '上传照片', new_guild_photo_url(:album_id => @album.id) %>
<% end %>

<% i = 0 %>
<table class='photo-list'>
<% @album.photos.each do |p| %>
  <% if i == 0 %>
    <tr>
  <% end %>
  <td>
    <%= photo_link p %><p>
    <% if @user == current_user %>
      <%= link_to '编辑', edit_guild_photo_url(p), :rel => 'facebox' %>|
      <%= facebox_confirm '删除', guild_photo_url(p), {:msg => "你确定要删除这张照片吗?", :method => :delete} %>
    <% end %>
  </td>
  <% i = i + 1 %>
  <% if i== 4 %>
    <% i = 0 %>
    <tr/>
<% end %>
<% end %>
</table>

<% if @user == current_user %>
	<%= in_place_text_field :span, @album, :description, true, guild_album_url(@album), {}, {:empty_text => '点击添加相册描述', :parameter_name => 'album[description]', :rows => 2, :cols => 90} %>
<% else %>
	<%= @album.description %>
<% end %>

<p class="albumTime">
  <% unless @album.uploaded_at.blank? %>
    <span class="time-update"><%= ftime @album.uploaded_at %>更新</span><br/>
  <% end %>
  <span class="time-create"><%= ftime @album.created_at %>创建</span>
</p>

<%= render :partial => 'comments/comment_box', :locals => {:comment_template => '/guild_album/album_comments/comment', :commentable => @album, :recipient => @guild.president} %>

