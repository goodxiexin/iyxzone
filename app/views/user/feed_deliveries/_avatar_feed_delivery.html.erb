<% delivery = avatar_feed_delivery %>
<% avatar = delivery.feed_item.originator %>
<% album = avatar.album %>
<div class="feed-list" id='feed_delivery_<%= delivery.id %>'>
	<div class="feed-icon icon-photo"></div>
	<p><%= profile_link album.poster %> <span>更新了头像</span> </p>
  <div class="feed-pic s_clear">
		<div class="img">
			<%= avatar album.poster %>
		</div>
		<div class="pics">
			<%= photo_link avatar, :size => :large, :class => 'imgbox01' %>
		</div>
		<p><%= ftime delivery.created_at %> <%= link_to_function "回复", "Iyxzone.Comment.showForm('avatar', #{avatar.id}, null);" %></p>
	</div>
  <% if with_comments %>
	  <%= render :partial => "user/comments/folded_comment_box", :locals => {:commentable => avatar , :recipient => avatar.poster} %>
  <% end %>
	<div>
  <% if feed_delivery_deleteable_by_current_user delivery %><%= link_to_remote "x", :url => feed_delivery_url(delivery), :method => :delete %><% end %>
  </div>
</div>

