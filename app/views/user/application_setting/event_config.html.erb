<p class="z-h s_clear">
  <strong class="left">活动设置</strong>
  <%= link_to_function '', "facebox.close();", :class => "icon2-close right" %>
</p>

<div class='z-con'>
<% form_remote_for :setting, :url => application_setting_url(@setting), :method => :put do |f| %>
<div class='formcontent'>
  <div class="rows s_clear">
    <div class="fldid"><%= f.check_box 'recv_event_feed' %></div>
    <div class="fldvalue">
      <label for="name">看到别人的新鲜事</label>
    </div>
  </div>
  <div class="rows s_clear">
    <div class="fldid"><%= f.check_box 'emit_event_feed' %></div>
    <div class="fldvalue">
      <label for="des">让别人看到我的新鲜事</label>
    </div>
  </div>
</div>
<div class="z-submit s_clear space">
  <table class="center" cellpadding="0"><tr><td>
    <span class="button"><span><button type="submit" onclick="Iyxzone.disableButton(this,'请等待..')">完成</button></span></span>
    <span class="button button-gray"><span><button type="button" onclick="facebox.close();">取消</button></span></span>
  </td></tr></table>
</div>
<% end %>
</div>
