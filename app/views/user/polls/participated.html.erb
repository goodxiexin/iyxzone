
<% content_for :html_title, "#{@user.login}的已参加投票 - 17Gaming.com" %>
<% content_for :html_description, "#{@user.login}的已参加投票 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{current_user.login}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
	<% if @user==current_user %>
    <h1 class="app-vote">投票</h1>
	<% else %>
    <div class="friend-head space s_clear">
      <span class="left"><%= avatar @user, :class=>"imgbox01"%></span>
      <p class="left">
        <strong><%= @user.login %>的投票</strong><br />
        <%= link_to '个人主页', profile_url(@user.profile), :class=>'red'%>
      </p>
    </div>
	<% end %>
    <div class="box02 canvas_int space">
      <div class="tab tab01">
        <div class="right"><%= link_to "新投票", new_poll_url %></a></div>
        <ul>
          <li><span><%= link_to "热门投票", hot_polls_url(:uid => @user.id) %></span></li>
          <li class='hover'><span><%= link_to "#{get_subject @user}的投票", polls_url(:uid => @user.id) %></span></li>
          <% if @user == current_user %>
          <li><span><%= link_to "朋友的投票", friends_polls_url %></span></li>
          <% end %>
        </ul>
      </div>
      <div class="vote-box">
        <div class="nav-link">
          <ul class="s_clear">
            <li><%= link_to "<span>#{get_subject @user}发起的投票(#{@user.polls_count})</span>", polls_url(:uid => @user.id) %></li>
            <li class='hover'><%= link_to "<span>#{get_subject @user}参与的投票(#{@user.participated_polls_count})</span>", participated_polls_url(:uid => @user.id) %></li>
          </ul>
        </div>
        <% if @user.participated_polls_count != 0 %>
          <%= render :partial => 'poll_items', :object => @polls %>
          <%= will_paginate @polls %>
        <% else %>
          <div class='gray'>
          <% if @user == current_user %>
            你还没参加过别人的投票，你可以参加 <%= link_to '好友的投票', friends_polls_url %> 或者 <%= link_to '最近别人创建的投票', recent_polls_url(:uid => @user.id) %> 或者 <%= link_to '最近的热门投票', hot_polls_url(:uid => @user.id) %>
          <% else %>
            <%= get_subject @user %> 没创建过任何投票
          <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div></div>
</div></div></div></div>
