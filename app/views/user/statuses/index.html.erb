<% content_for :javascript_include do %>
<%= javascript_include_tag 'status' %>
<% end %>

<% content_for :html_title, "#{@user.login}的状态 - 17Gaming.com" %>
<% content_for :html_description, "#{@user.login}的状态 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{@user.login}, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<% subject = get_subject @user %>
<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
		<% if @user == current_user %>
			<h1 class="app-status">状态</h1>
		<% else %>
    <div class="friend-head space s_clear">
      <span class="left"><%= avatar @user, :class=>"imgbox01"%></span>
      <p class="left">
        <strong><%= @user.login %>的状态</strong><br />
        <%= link_to '个人主页', profile_url(@user.profile), :class=>'red'%>
      </p>
    </div>
		<% end %>
    <div class="box02 canvas_int">
      <div class="tab tab01">
        <ul>
          <li class='hover'><span><%= link_to "#{subject}的状态", statuses_url(:uid => @user.id) %></span></li>
					<% if @user == current_user %>
          <li><span><%= link_to "好友的状态", friends_statuses_url %></span></li>
					<% end %>
        </ul>
      </div>
      <% if @user == current_user %>
      <div id="homeComposer" class="cmt-space">
        <div class="img">
          <div class="mcAvatar jl-mcAvatar"> 
            <a href="#"></a>
            <div class="picwrap"> <%= avatar @user %> </div>
          </div>
        </div>
        <div class="mcContent">
          <div class="mcPanel round02 round_r_t">
            <div class="round_l_t">
              <div class="round_r_b">
                <div class="round_l_b">
                  <div class="round_m jl-round_m"> <span class="arrow-dialog"></span>
                    <div class="round_body s_clear">
                      <% form_for :status, :html => {:onsubmit => "Iyxzone.Status.Builder.save($('submit_btn'), this); return false", :class => 'formcontent s_clear'} do |f| %>
                        <%= hidden_field_tag 'home', 0 %>
                        <div class="fldvalue">
                          <div id="mcStatus" class="textfield02" style="width:500px;">
                            <%= f.text_area 'content', :value => "你正在干嘛呢?" %>
                          </div>
                        </div>
                        <div class="fldbtn jl-fldbtn"> <span class="button03"><span>
                          <button type='submit' id='submit_btn' class='confirm-button' >发布</button>
                        </span></span> </div>
                      <% end %>
                      <div class="buttons home-dialog"> 
												<span class="left" id='words_count'>0/140</span>
                        <span class='right'><%= emotion_link 'status_content', :class => 'icon-face' %></span>
                      </div>
                            <%= javascript_tag "new Iyxzone.limitedTextField($('status_content'), 140, $('words_count'));" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <div id='info'></div>
      <div class="feed-box01 list-v2">
        <% if current_user == @user %>
        <div class="list-v2-head">以下是您所发布过的所有状态</div>
        <% else %>
        <div class='list-v2-head'>以下是<%= @user.login %>所发布的所有状态</div>
        <% end %>
        <div id='statuses'>
        <%= render :partial => 'status', :collection => @statuses %>
        </div>
        <%= will_paginate @statuses %>
      </div>
    </div>
  </div></div>
</div></div></div></div>

<% if !@reply_to.blank? and !@status.blank? %>
  <%= javascript_tag "
    Iyxzone.Comment.toggleBox('status', #{@status.id}, #{@status.comments_count});
    Iyxzone.Comment.set('status', #{@status.id}, '#{@reply_to.login}', #{@reply_to.id});" 
  %>
<% end %>

