<p class="z-h s_clear">
  <strong class="left">分享</strong>
  <%= link_to_function '', "facebox.close();", :class => "icon2-close right" %>
</p>

<div id='errors'></div>
<div class='z-con'>
<% form_remote_for :sharing, :url => sharings_url(:shareable_type => params[:shareable_type], :shareable_id => params[:shareable_id]), :html => {:onsubmit=> "Iyxzone.disableButton($(new_sharing_btn),'请等待..');"} do |f| %>
<% if params[:link] %>
  <%= hidden_field_tag 'sharing[link]', params[:link] %>
<% end %>
<div class='formcontent'>
  <div class="rows s_clear">
    <div class="fldid"><label for="name">分享标题：</label></div>
    <div class="fldvalue">
      <div class="textfield"><%= text_field_tag 'sharing[title]', @title %></div>
    </div>
  </div>
  <div class="rows s_clear">
    <div class="fldid"><label for="des">分享理由：</label></div>
    <div class="fldvalue">
      <%= f.text_area 'reason' %>
    </div>
  </div>
</div>
<div class="z-submit s_clear space">
  <table class="center" cellpadding="0"><tr><td>
    <span class="button"><span><button type="submit" id='new_sharing_btn'>完成</button></span></span>
    <span class="button button-gray"><span><button type="button" onclick="facebox.close();">取消</button></span></span>
  </td></tr></table>
</div>
<% end %>
</div>
