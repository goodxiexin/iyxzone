<%= stylesheet_link_tag 'test' %>
<%= stylesheet_link_tag 'cropper' %>
<%= javascript_include_tag 'textboxlist' %>
<%= javascript_include_tag 'friend' %>
<%= javascript_include_tag 'cropper' %>
<%= javascript_include_tag 'photo' %>

<% content_for :left do %>
  <%= render :partial => '/app_menu' %>
<% end %>
  
<%= render :partial => 'menu' %>

<div class='crumb'>
<div class='left'>
<% subject = get_subject @user %>
<%= link_to "#{subject}的照片", personal_albums_url(:id => @user.id) %> -> <%= album_link @album %> -> 照片<br/>
</div>
</div>
<br/>
<div class='photo-view'>
  <div class='photo-wrap'>
    <%= image_tag @photo.public_filename, :id => "photo_#{@photo.id}" %>
  </div>
  <div class='photo-info'>
	<% if @user == current_user %>
    <%= in_place_text_field :span, @photo, :notation, true, personal_photo_url(@photo), {}, {:empty_text => '点击增加照片描述', :parameter_name => 'photo[notation]', :rows => 2, :cols => 70} %>
	<% else %>
		<%= @photo.notation %>
	<% end %>
  </div>
  <div>
    <ul id='photo_tags'>
    </ul>
  </div>
</div>

<div id='control_panel' style="display:none">
	<div>
		<%= label_tag '这是谁...' %><br/>
    <%= text_field_tag 'friend[login]', '', :size => 35 %>
    <%= button_to_function '', "", :id => 'toggle_button' %><br/>
    <div id='friend_list' style="display:none"></div>
    <div id="friend_table" class="box05" style="display:none">
      <div class="title01">
        <div class="right">
          <select name="" id='game_selector' >
            <option value='all'>全部好友</option>
            <% current_user.games.each do |game| %>
              <option value=<%= game.id %>><%= game.name %></option>
            <% end %>
          </select>
        </div>
        <h1>限选1人</h1>
      </div>
      <div class="checkgroup" id='friend_items'></div>
    </div>
		<% form_remote_for :tag, :url => personal_photo_tags_url(@photo), :html => {:id => 'tag_form'} do |f| %>
			<%= f.label '说点什么吧' %><br/>
			<%= f.text_area 'content', :rows => 2, :cols => 40 %><br/>
			<%= button_to_function '确定', "", :id => 'confirm_btn'%>
			<%= button_to_function '取消', "", :id => 'cancel_btn'%>
		<% end %>
	</div>
</div>

<div id='photo_options'>
  <%= dig_link @photo %> |
	<% if relationship == 'owner' or relationship == 'friend' %>
		<%= link_to_function '标记', "tagger.start();" %> |
	<% end %>
  <% if @user == current_user %>
    <%= link_to '编辑', edit_personal_photo_url(@photo), :rel => 'facebox' %> |
    <%= facebox_confirm 'x', personal_photo_url(@photo), {:method => :delete, :msg => '你确定要删除这张照片吗?'} %>  
  <% end %>
</div>

<div id='photo_preview'>
  <div class='prev'>
		<% if @album.photos_count > 4 %>
			<%= link_to_function '上一张', "slide.prev();" %>
		<% end %>
	</div>
  <div class='photo-list'>
    <ul id='frames'>
		<% window_size = (@album.photos_count > 4)? 4 : @album.photos_count %>
    <% window_size.times do |i| %>
      <li></li>
    <% end %>
    </ul>
  <div class='next'>
		<% if @album.photos_count > 4 %>
			<%= link_to_function '下一张', "slide.next();" %>
		<% end %>
	</div>
</div>

<%= render :partial => 'comments/comment_box', :locals => {:comment_template => 'personal_album/photo_comments/comment', :commentable => @photo, :recipient => @user} %>

<% photo_ids = array_or_string_for_javascript @album.photos.map(&:id) %>
<% urls = array_or_string_for_javascript @album.photos.map {|p| p.public_filename(:small)} %>
<%= javascript_tag "
  slide = new Iyxzone.Photo.Slide('personal_photo', #{photo_ids}, #{urls}, #{window_size}, $('frames').childElements(), #{@photo.id});
  tagger = new Iyxzone.Photo.Tagger('personal_photo', #{@photo.id}, 'control_panel', 'confirm_btn', 'cancel_btn', #{@tags}, 'photo_tags', #{@user == current_user ? 1 : 0}, 'tag_content', 'toggle_button', 'friend_login', 'friend_list', 'friend_table', 'friend_items', 'game_selector', '#{form_authenticity_token}', {});
"%>
